<?xml version='1.0' encoding='utf-8'?>
<widget 
  id="com.sensestudios.zoomintv.games" 
  version="1.0.3" 
  versioncode="8"
  xmlns="http://www.w3.org/ns/widgets" 
  xmlns:gap="http://phonegap.com/ns/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
>

    <name>ZoominTV Games</name>
    <description>ZoominTV Games Channel</description>
    <author email="info@zoomin.tv" href="http://zoomin.tv">ZoominTV</author>
    
    <content src="http://zoomintv-games.herokuapp.com" />
    <!-- <content src="http://develop.sense-studios.com:32000" /> -->
    <access origin="*" />
    
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="StatusBarOverlaysWebview" value="false" />
    
    <preference name="fullscreen" value="true" />
    <preference name="permissions" value="none"/>
    <preference name="splash-screen-duration" value="3000" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />

    <gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.6" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
      <true/>
    </gap:config-file>    
    <gap:config-file platform="ios" parent="AllowInlineMediaPlayback">
      <true/>
    </gap:config-file>    
    <gap:config-file platform="ios" parent="MediaPlaybackRequiresUserAction">
      <false/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
      <false/>
    </gap:config-file>
        
    <!-- android -->
    <icon       gap:platform="android" src='res/android/icon/ldpi.png'                gap:qualifier='ldpi' />
    <icon       gap:platform="android" src='res/android/icon/mdpi.png'                gap:qualifier='mdpi' />
    <icon       gap:platform="android" src='res/android/icon/hdpi.png'                gap:qualifier='hdpi' />
    <icon       gap:platform="android" src='res/android/icon/xhdpi.png'               gap:qualifier='xhdpi' />     
    
    <gap:splash gap:platform="android" src="res/android/splash/ldpi.jpg"              gap:qualifier="ldpi" />
    <gap:splash gap:platform="android" src="res/android/splash/mdpi.jpg"              gap:qualifier="mdpi" />
    <gap:splash gap:platform="android" src="res/android/splash/hdpi.jpg"              gap:qualifier="hdpi" />
    <gap:splash gap:platform="android" src="res/android/splash/xhdpi.jpg"             gap:qualifier="xhdpi" />
    <gap:splash gap:platform="android" src="res/android/splash/fr-xhdpi.jpg"          gap:qualifier="fr-xhdpi" />
    <gap:splash gap:platform="android" src="res/android/splash/portrait-xxhdpi.jpg"   gap:qualifier="port-xxhdpi" />
    <gap:splash gap:platform="android" src="res/android/splash/landscape-xxhdpi.jpg"  gap:qualifier="land-xxhdpi" />
    
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon gap:platform="ios" src="res/ios/icon/Icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon gap:platform="ios" src="res/ios/icon/Icon-76.png" width="76" height="76" />
    <icon gap:platform="ios" src="res/ios/icon/Icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon gap:platform="ios" src="res/ios/icon/Icon-Small-40.png" width="40" height="40" />
    <icon gap:platform="ios" src="res/ios/icon/Icon-Small-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon gap:platform="ios" src="res/ios/icon/Icon.png" width="57" height="57" />
    <icon gap:platform="ios" src="res/ios/icon/Icon@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon gap:platform="ios" src="res/ios/icon/Icon-72.png" width="72" height="72" />
    <icon gap:platform="ios" src="res/ios/icon/Icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Ico/iconn -->
    <icon gap:platform="ios" src="res/ios/icon/Icon-Small.png" width="29" height="29" />
    <icon gap:platform="ios" src="res/ios/icon/Icon-Small@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon /icon-->
    <icon gap:platform="ios" src="res/ios/icon/Icon-Small-50.png" width="50" height="50" />
    <icon gap:platform="ios" src="res/ios/icon/Icon-Small-50@2x.png" width="100" height="100" />
   
    <!-- iPhone and iPod touch -->
    <gap:splash src="res/ios/splash/Default.jpg" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/ios/splash/Default@2x.jpg" gap:platform="ios" width="640" height="960" />    
    <!-- iPhone 5 / iPod Tou/splashch (5th Generation) -->
    <gap:splash src="res/ios/splash/Default-568h@2x.jpg" gap:platform="ios" width="640" height="1136" />    
    <!-- iPad -->
    <gap:splash src="res/ios/splash/Default-Portrait.jpg" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="res/ios/splash/Default-Landscape.jpg" gap:platform="ios" width="1024" height="768" />    
    <!-- Retina iPad -->
    <gap:splash src="res/ios/splash/Default-Portrait@2x.jpg" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="res/ios/splash/Default-Landscape@2x.jpg" gap:platform="ios" width="2048" height="1536" />
    
</widget>
