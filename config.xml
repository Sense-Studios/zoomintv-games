<?xml version='1.0' encoding='utf-8'?>
<widget 
  id="com.sensestudios.zoomintv.games" 
  version="0.0.3" 
  versioncode="3"
  xmlns="http://www.w3.org/ns/widgets" 
  xmlns:gap="http://phonegap.com/ns/1.0"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
>

    <name>ZoominTV Games</name>
    <description>
        ZoominTV Games Channel
    </description>
    <author email="info@zoomin.tv" href="http://zoomin.tv">
        ZoominTV
    </author>
    
    <!-- <content src="http://zoomintvgames-staging.herokuapp.com" /> -->
    <content src="http://develop.sense-studios.com:32000" />
    <access origin="*" />
    
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="StatusBarOverlaysWebview" value="false" />
    <preference name="fullscreen" value="true" />
    
    <gap:platform name="ios" />
    <gap:platform name="android" />

    <gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.6" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
      <true/>
    </gap:config-file>
    
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">s
      <false/>
    </gap:config-file>
    
    <gap:splash src="splash.png" />
    <gap:icon src="icon.png" />
    
    <!-- android -->
    <icon src='res/android/ldpi.png'  gap:platform="android" gap:density='ldpi' />
    <icon src='res/android/mdpi.png'  gap:platform="android" gap:density='mdpi' />
    <icon src='res/android/hdpi.png'  gap:platform="android" gap:density='hdpi' />
    <icon src='res/android/xhdpi.png' gap:platform="android" gap:density='xhdpi' />
    
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon gap:platform="ios" src="res/ios/Icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon gap:platform="ios" src="res/ios/Icon-76.png" width="76" height="76" />
    <icon gap:platform="ios" src="res/ios/Icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon gap:platform="ios" src="res/ios/Icon-Small-40.png" width="40" height="40" />
    <icon gap:platform="ios" src="res/ios/Icon-Small-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon gap:platform="ios" src="res/ios/Icon.png" width="57" height="57" />
    <icon gap:platform="ios" src="res/ios/Icon@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon gap:platform="ios" src="res/ios/Icon-72.png" width="72" height="72" />
    <icon gap:platform="ios" src="res/ios/Icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon gap:platform="ios" src="res/ios/Icon-Small.png" width="29" height="29" />
    <icon gap:platform="ios" src="res/ios/Icon-Small@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon gap:platform="ios" src="res/ios/Icon-Small-50.png" width="50" height="50" />
    <icon gap:platform="ios" src="res/ios/Icon-Small-50@2x.png" width="100" height="100" />
    
    <gap:splash src="res/ios/Default-568h@2x~iphone.png" gap:platform="ios" width="320" height="480" />
</widget>
